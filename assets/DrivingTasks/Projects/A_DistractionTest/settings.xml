<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<settings xmlns="http://opends.eu/drivingtask/settings" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://opends.eu/drivingtask/settings ../../Schema/settings.xsd">

	<general>
		<driverName>default driver</driverName>
		<showStats>false</showStats>
	</general>
	
	<HMI>
		<enableConnection>false</enableConnection>
		<ip>127.0.0.1</ip>
		<port>2111</port>
	</HMI>
	
	<externalVisualization>
		<enableConnection>false</enableConnection>
		<ip>141.96.189.103</ip>
		<port>4711</port>
		<updateRate>20</updateRate>
		<scalingFactor>100</scalingFactor>
		<sendPosOriAsOneString>false</sendPosOriAsOneString>
	</externalVisualization>
	
	<CANInterface>
		<enableConnection>false</enableConnection>
		<ip>192.168.0.2</ip>
		<port>4711</port>
		<updateRate>20</updateRate>
		<maxSteeringAngle>180</maxSteeringAngle>
	</CANInterface>
	
	<vsimrtiServer>
		<startServer>false</startServer>
		<port>1122</port>
	</vsimrtiServer>

	<reactionMeasurement>
		<groupRed>Brake</groupRed>
		<groupGreen>LaneChange</groupGreen>
		<groupYellow></groupYellow>
		<groupCyan></groupCyan>
		<groupBlue></groupBlue>
		<groupMagenta></groupMagenta>
	</reactionMeasurement>
	
	<controllers>
		<joystick>
			<!-- Logitech GT for now -->
			<dumpJoystickList>true</dumpJoystickList>
			<steering controllerID="0" axisID="0" invert="false" sensitivity="0.48"/>
			<combinedPedals controllerID="0" axisID="1" invert="false" sensitivity="3.0"/>
			<accelerator controllerID="0" axisID="3" invert="true" sensitivity="1.0"/>
			<brake controllerID="0" axisID="3" invert="true" sensitivity="1.0"/>
			<clutch controllerID="0" axisID="3" invert="true" sensitivity="1.0"/>		
			<keyAssignments>
				<keyAssignment function="toggle_engine" key="BUTTON_0"/>

				
				
				<!--	12 +
						13 -
						axis 4 up down
						axis 3- left 3+right
						11 L3
						10 R3
						15 Big +
						18 Big -
						14 Enter
						8 Select
						9 start
						3 trojuholnik
						2 Kolecko
						0 krizik
						1 stvorcek
						6 R2
						7 L2
						20 PS
						19 Middle
						EASY AS FUCK! POUZI REAL FUNKCIE + BUTTON_no) PODLA NAVODU TU ^ no caps, holding SHIFT (you know, took me just like an hour to make it work. what a piece of shit)
						
						
				-->
				<keyAssignment function="close_instruction_screen" key="BUTTON_15"/>
			</keyAssignments>
		</joystick>
		
		<keyboard>
			<keyAssignments>
				<keyAssignment function="toggle_cam" key="KEY_V"/>
				<keyAssignment function="horn" key="KEY_H"/>
				<keyAssignment function="close_instruction_screen" key="SPACE"/>
			</keyAssignments>
		</keyboard>
		<mouse>
			<!-- only for outside view -->
			<minScrollZoom>1</minScrollZoom>
			<maxScrollZoom>40</maxScrollZoom>
			<scrollSensitivityFactor>5</scrollSensitivityFactor>
		</mouse>
	</controllers>
	
</settings>
